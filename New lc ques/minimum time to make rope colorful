void solve()
{
  ll n;
  cin >> n;
  vector <ll> ps(n);
  for (int i = 0; i < n; ++i)
  cin >> ps[i];
  
  sort(all(ps));
  int p = 0;
  int dv = 1;
  int s = n - 2;
  int l = n - 1;
  ll piyush = 0;
  piyush = abs(ps[p] - ps[l]) + abs(ps[l] - ps[dv]) + abs(ps[dv] - ps[s]) + abs(ps[s] - ps[p]);
  debug(piyush);
  cout << piyush << endl;

  
}

int main()
{
#ifndef ONLINE_JUDGE
  freopen("input.txt", "r", stdin);
  freopen("output.txt", "w", stdout);
  freopen("Error.txt", "w", stderr);
#endif
  fastio();

  int t;
  cin >> t;

  while (t--)
  {
    solve();
  }
  return 0;
}
