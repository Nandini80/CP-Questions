#include <iostream>
#include <vector>

using namespace std;
 
int main() {
    int t;
    cin >> t;
    while (t--) {
 
     int n, k;
        cin >> n >> k;
 
        if (n == 1) {
            cout << 0 << endl;
            continue;
        }
 
        int ans = (n - 2) / (k - 1) + 1;
        cout << ans << endl;
 
 
       }
    return 0;
}