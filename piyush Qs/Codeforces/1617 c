#include <bits/stdc++.h>
using namespace std;
 
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define int long long 
 
 
 
int32_t main()
{
	IOS;
	int t;
	cin>>t;
	while(t--)
	{
	int n,x;
	cin>>n;
	int vis[n+1]={0};
	vector<int> v;
	for (int i = 0; i < n; ++i)
	{
		cin>>x;
		if(x<=n&&vis[x]==0){
			vis[x]=1;
		}else{
			v.push_back(x);
		}
	}
	int j=0,ans=1,cnt=0;
	sort(v.begin(),v.end());
	for (int i = 1; i <= n; ++i)
	{
		if(vis[i]){continue;}
		x=v[j]/2;
		if(v[j]%2==0){x--;}
		if(x<i){
			ans=0;break;
		}
		j++;
	}
	if(ans==0){cout<<-1<<endl;}else{cout<<v.size()<<endl;}
	}
	return 0;
}











































































































































































































































































































































































































































































































































































































































































































