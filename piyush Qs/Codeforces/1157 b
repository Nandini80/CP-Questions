#include<bits/stdc++.h>
using namespace std;
int s[10];
int main(){
	int n;
	cin>>n;
	char a[n+1];
	cin>>a;
	int b[11];
	for(int i=1;i<10;i++){
		cin>>b[i];
	}
	int y;
	bool p=1;
	for(int i=0;i<n;i++){
		int x=a[i]-'0';
		if(b[x]>=x){
			if(b[x]>x)
			p=0;
			a[i]=b[x]+'0';
		}
		else if(p==0){
			break;
		}
	}
	cout<<a;
 
 
 
	return 0;
}