#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> ps(n);
    for (int i = 0; i < n; ++i) {
        cin >> ps[i];
    }

    sort(ps.begin(), ps.end());

	int piyush;


      int piyush = (ps[n-1] - ps[0]);
    

    cout << piyush << endl;

    return 0;
}