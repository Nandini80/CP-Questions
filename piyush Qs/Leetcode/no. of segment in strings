class Solution {
public:
    int countSegments(string s) {
        
        int ans = 0;
        bool flag = false;

        for ( int i = 0; i < s.size(); i++){
            if ( s[i] != ' '){

                if ( !flag){
                ans++;
                flag = true;
            }
        }
        else{
            flag = false;
        }
        }
        return ans;
    }
};